<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
    </style>

    <style name="CustomStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:datePickerDialogTheme">@style/MyDatePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/TimePickerDialogTheme</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FF9090</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#000000</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#000000</item>
        <item name="colorControlHighlight">#fff</item>
    </style>

    <style name="TextInputLayoutAppearance2" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">#FF9090</item>
        <item name="android:textColorHint">#FF9090</item>
        <item name="colorControlNormal">#FFFFFF</item>
        <item name="colorControlActivated">#FF9090</item>
        <item name="colorControlHighlight">#fff</item>
    </style>
    <style name="TextInputLayoutAppearance3" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">#707070</item>
        <item name="colorControlActivated">#A4A4A4</item>
        <item name="colorControlHighlight">#fff</item>
    </style>

    <style name="DialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF9090</item>
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:headerBackground">#FF9090</item>
    </style>

    <style name="TimePickerDialogTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">#FF9090</item>
        <item name="android:timePickerStyle">@style/TimePickerDialogStyle</item>
    </style>

    <style name="TimePickerDialogStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="colorAccent">#FF9090</item>
        <item name="android:timePickerMode">clock</item>
        <item name="android:headerBackground">#FF9090</item>
    </style>
    
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">#fff</item>
    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">25sp</item>
    </style>

</resources>